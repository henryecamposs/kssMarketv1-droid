<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5sp"
    android:weightSum="1"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:background="@color/color_Gris"
        android:padding="5dp"
        android:paddingTop="0dp"
        android:weightSum="1"
        android:layout_weight=".90" >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@android:color/holo_blue_dark"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView13"
                    android:src="@drawable/btn_kalixtomarketsolo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView14"
                    android:contentDescription="LogoApp"
                    android:src="@drawable/kalixtomarketban_logo"
                    android:focusable="false"
                    android:layout_gravity="right" />

            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/imageView21"
                android:src="@drawable/btn_error"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                android:padding="2dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="@color/color_Smoke"
            android:padding="2dp"
            android:layout_weight="1"
            android:weightSum="1">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="center_vertical|left">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton24"
                    android:scaleType="fitCenter"
                    android:src="@drawable/agt_home"
                    android:background="@color/color_Gris" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:weightSum="1"
                android:padding="0dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="henryecamposs@gmail.com"
                    android:id="@+id/textView27"
                    android:gravity="center|center_vertical"
                    android:textColor="@color/color_Azul"
                    android:textIsSelectable="false"
                    android:textSize="9dp"
                    android:textStyle="italic"
                    android:typeface="normal"
                    android:autoLink="email"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView12"
                    android:src="@drawable/ksslogo_banner1"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>