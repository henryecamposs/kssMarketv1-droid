<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/kss_widget.ButtonBar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_gravity="center_horizontal">

        <TextView
            style="@style/Kss_TextAparence.lstItemsNegro.sub"
            android:id="@+id/tvCanti_ModifcadoresItems"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="1dp"
            android:paddingLeft="2dp"
            android:maxLines="2"
            android:layout_gravity="center_horizontal"
            android:text="99.99"
            android:gravity="center_horizontal|right" />

        <TextView
            style="@style/Kss_TextAparence.lstItemsNegro.sub"
            android:id="@+id/tvItemModificador_ModifcadoresItems"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="1dp"
            android:paddingLeft="2dp"
            android:maxLines="2"
            android:layout_gravity="center_horizontal|left"
            android:text="Extra"
            android:gravity="center_horizontal|left"
            android:layout_marginLeft="5dp" />

        <TextView
            style="@style/Kss_TextAparence.lstItemsNegro.sub"
            android:id="@+id/tvTotal_ModifcadoresItems"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:padding="1dp"
            android:paddingLeft="2dp"
            android:maxLines="2"
            android:layout_gravity="center_horizontal|left"
            android:text="999.999.00"
            android:gravity="center_horizontal|right"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
</LinearLayout>