<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5sp"
    android:weightSum="1"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:background="@color/color_Gris"
        android:padding="5dp"
        android:paddingTop="0dp"
        android:weightSum="1"
        android:layout_weight=".90" >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@android:color/holo_blue_dark"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView13"
                    android:src="@drawable/btn_kalixtomarketsolo" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView14"
                    android:contentDescription="LogoApp"
                    android:src="@drawable/kalixtomarketban_logo"
                    android:focusable="false"
                    android:layout_gravity="right" />

            </LinearLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ivExitProd"
                android:src="@drawable/btn_error"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right"
                android:padding="2dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="1"
            android:background="#ff05055b"
            android:layout_gravity="top"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp" >

            <EditText
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText33"
                android:layout_weight="1"
                android:hint="Buscar Producto" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivBuscarprod"
                android:src="@drawable/btn_buscar"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:clickable="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivEditarprod"
                android:src="@drawable/btn_comanda"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:clickable="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivAddProd"
                android:src="@drawable/btn_circ_plusa"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:clickable="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivDelProd"
                android:src="@drawable/btn_circ_minusr"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="@color/color_Smoke"
            android:padding="2dp"
            android:layout_weight="1"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@color/color_Smoke"
                android:padding="2dp"
                android:layout_weight="1"
                android:weightSum="1"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    style="@style/kss_widget.FrameRedondo"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="17"
                        android:alignmentMode="alignBounds"
                        android:background="@color/color_Gris"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1" >

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters|textAutoComplete|textPersonName"
                            android:ems="10"
                            android:id="@+id/editText11"
                            android:layout_weight="1"
                            android:hint="Nombre"
                            android:textAppearance="@style/Kss_TextAparence.txtDatos"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_gravity="bottom" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords|numberDecimal"
                            android:ems="10"
                            android:id="@+id/editText7"
                            android:layout_weight="1"
                            android:hint="Precio Costo"
                            android:textAppearance="@style/Kss_TextAparence.txtDatos"
                            android:layout_row="5"
                            android:layout_column="1" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences|textAutoComplete|textPersonName"
                            android:ems="10"
                            android:id="@+id/editText11"
                            android:hint="Descripción Larga"
                            android:textAppearance="@style/Kss_TextAparence.txtDatos"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:linksClickable="false"
                            android:lines="2"
                            android:layout_gravity="bottom" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:layout_row="0"
                            android:layout_column="1"
                            style="@style/kss_widget.ButtonBar"
                            android:layout_gravity="right|top">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Código:"
                                android:id="@+id/textView18"
                                android:textAppearance="@style/Kss_TextAparence.labelRegistro"
                                android:layout_weight="0"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:textSize="7pt"
                                android:layout_gravity="left|top"
                                android:paddingRight="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="001"
                                android:id="@+id/textView18"
                                android:textAppearance="@style/Kss_TextAparence.labelRegistro"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_gravity="right|top"
                                android:textSize="7pt"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_rowSpan="4">

                            <ImageButton
                                style="@style/kss_widget.FrameRedondo"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:id="@+id/ivTakeImageProd"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:scaleType="fitXY"
                                android:src="@drawable/kss_camara"
                                android:padding="5dp"
                                android:layout_columnSpan="2"
                                android:layout_gravity="left|top"
                                android:clickable="true"
                                android:layout_rowSpan="2"
                                android:drawableTop="@drawable/kss_camara"
                                android:text="\nTomar Foto"
                                android:layout_marginLeft="-5dp"
                                android:longClickable="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zoom"
                                android:id="@+id/textView64"
                                android:textAppearance="@style/Kss_TextAparence.labelRegistro"
                                android:paddingRight="10dp"
                                android:layout_weight="0"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:background="@color/color_Blanco"
                                android:alpha="0.5"
                                android:autoText="false"
                                android:layout_gravity="left|top" />

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Nombre: "
                            android:id="@+id/textView19"
                            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
                            android:layout_weight="0"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_gravity="top"
                            android:paddingLeft="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Categoría:"
                            android:id="@+id/textView20"
                            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
                            android:paddingRight="10dp"
                            android:layout_weight="0"
                            android:layout_row="3"
                            android:layout_column="0" />

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/spCategorias"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:spinnerMode="dropdown" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Impuesto:"
                            android:id="@+id/textView21"
                            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
                            android:paddingRight="10dp"
                            android:layout_weight="0"
                            android:layout_row="4"
                            android:layout_column="0" />

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/spImpuestos"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:spinnerMode="dropdown" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Precio Costo:"
                            android:id="@+id/textView25"
                            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
                            android:paddingRight="10dp"
                            android:layout_weight="0"
                            android:layout_row="5"
                            android:layout_column="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Precio Venta:"
                            android:id="@+id/textView26"
                            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
                            android:paddingRight="10dp"
                            android:layout_weight="0"
                            android:layout_row="6"
                            android:layout_column="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:text="Descripción:"
                            android:id="@+id/textView28"
                            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
                            android:layout_weight="0"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_gravity="top"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords|numberDecimal"
                            android:ems="10"
                            android:id="@+id/editText10"
                            android:layout_weight="1"
                            android:hint="Precio Venta"
                            android:textAppearance="@style/Kss_TextAparence.txtDatos"
                            android:layout_row="6"
                            android:layout_column="1" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical|center_horizontal"
                            android:padding="5dp"
                            android:layout_gravity="left"
                            android:layout_row="16"
                            android:layout_column="0"
                            android:layout_columnSpan="2">

                            <LinearLayout
                                style="@style/kss_widget.FrameRedondo"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="133dp"
                                android:layout_marginStart="133dp"
                                android:id="@+id/llayCancelarProd">

                                <ImageButton
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/imageButton9"
                                    android:src="@drawable/btn_circ_oka"
                                    android:scaleType="fitCenter"
                                    android:background="@color/color_GrisClaro"
                                    android:padding="7dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cancelar"
                                    android:id="@+id/textView29"
                                    android:textColor="@color/color_Negro"
                                    android:textSize="9pt" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/kss_widget.FrameRedondo"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/llayCancelarProd"
                                android:layout_toEndOf="@+id/llayCancelarProd"
                                android:id="@+id/llayguardarProd">

                                <ImageButton
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/imageButton10"
                                    android:src="@drawable/btn_circ_oka"
                                    android:scaleType="fitCenter"
                                    android:background="@color/color_GrisClaro"
                                    android:padding="7dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Guardar"
                                    android:id="@+id/textView30"
                                    android:textColor="@color/color_Negro"
                                    android:textSize="9pt" />
                            </LinearLayout>

                        </RelativeLayout>
                    </GridLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:padding="2dp"
                        android:gravity="fill_horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
                            android:text="Producto: 1 de 10"
                            android:id="@+id/textView47"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_gravity="left|center_vertical"
                            android:gravity="center_vertical|left"
                            android:layout_weight="1"
                            android:textSize="8pt" />

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical" >

                            <ImageButton
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:id="@+id/ibFirstProd"
                                android:adjustViewBounds="true"
                                android:src="@drawable/btn_circ_first"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:background="@color/color_GrisClaro"
                                android:clickable="true"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginLeft="3dp" />

                            <ImageButton
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:id="@+id/ibPrevProd"
                                android:scaleType="fitCenter"
                                android:src="@drawable/btn_circ_anterior"
                                android:layout_weight="1"
                                android:background="@color/color_GrisClaro"
                                android:clickable="true"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginLeft="3dp" />

                            <ImageButton
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:id="@+id/ibNextProd"
                                android:scaleType="fitCenter"
                                android:src="@drawable/btn_circ_siguiente"
                                android:layout_weight="1"
                                android:background="@color/color_GrisClaro"
                                android:clickable="true"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginLeft="3dp" />

                            <ImageButton
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:id="@+id/ibLastProd"
                                android:src="@drawable/btn_circ_last"
                                android:scaleType="fitCenter"
                                android:layout_weight="1"
                                android:background="@color/color_GrisClaro"
                                android:clickable="true"
                                android:layout_gravity="right|center_vertical"
                                android:layout_marginLeft="3dp" />
                        </GridLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="center_vertical|left">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageButton24"
                    android:scaleType="fitCenter"
                    android:src="@drawable/agt_home"
                    android:background="@color/color_Gris" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:weightSum="1"
                android:padding="0dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="henryecamposs@gmail.com"
                    android:id="@+id/textView27"
                    android:gravity="center|center_vertical"
                    android:textColor="@color/color_Azul"
                    android:textIsSelectable="false"
                    android:textSize="9dp"
                    android:textStyle="italic"
                    android:typeface="normal"
                    android:autoLink="email"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView12"
                    android:src="@drawable/ksslogo_banner1"
                    android:scaleType="fitXY" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>