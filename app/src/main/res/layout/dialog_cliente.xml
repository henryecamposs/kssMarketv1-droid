<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:background="@color/color_GrisClaro"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:text="TelÃ©fono:"
            android:textAppearance="@style/Kss_TextAparence.labelNormal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:text="CI/RIF:"
            android:textAppearance="@style/Kss_TextAparence.labelNormal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblprecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="3"
            android:text="Email:"
            android:textAppearance="@style/Kss_TextAparence.labelNormal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblnombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:text="Nombre:"
            android:textAppearance="@style/Kss_TextAparence.labelNormal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvNombre_dc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:inputType="textMultiLine"
            android:lines="1"
            android:singleLine="false"
            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
            tools:text="texto" />

        <TextView
            android:id="@+id/tvCI_dc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:inputType="textMultiLine"
            android:lines="1"
            android:singleLine="false"
            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
            tools:text="texto" />

        <TextView
            android:id="@+id/tvTelf_dc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:inputType="textMultiLine"
            android:lines="1"
            android:singleLine="false"
            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
            tools:text="texto" />

        <TextView
            android:id="@+id/tvEmail_dc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="3"
            android:inputType="textMultiLine"
            android:lines="1"
            android:singleLine="false"
            android:textAppearance="@style/Kss_TextAparence.labelRegistro"
            tools:text="texto" />
    </GridLayout>
</LinearLayout>