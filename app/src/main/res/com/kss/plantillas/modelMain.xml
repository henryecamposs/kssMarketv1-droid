<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:weightSum="1"
    android:focusableInTouchMode="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_Gris"
        android:padding="5dp"
        android:paddingTop="0dp"
        android:weightSum="1"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:layout_marginBottom="50sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/btn_kalixtomarketsolo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivLogoApp"
                android:contentDescription="LogoApp"
                android:src="@drawable/kalixtomarketban_logo"
                android:focusable="false"
                android:layout_gravity="right" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.23"
            android:gravity="center_horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0">

                    <ImageButton
                        android:layout_width="110sp"
                        android:layout_height="110sp"
                        android:id="@+id/imageButton6"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/btn_cliente"
                        android:scaleType="fitCenter"
                        android:onClick="AbrirdlgClientes" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Clientes"
                        android:id="@+id/textView5"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0">

                    <ImageButton
                        android:layout_width="110sp"
                        android:layout_height="110sp"
                        android:id="@+id/imageButton7"
                        android:layout_gravity="center"
                        android:src="@drawable/btn_productos"
                        android:onClick="AbrirdlgProductos" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Productos"
                        android:id="@+id/textView6"
                        android:layout_gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0">

                    <ImageButton
                        android:layout_width="110sp"
                        android:layout_height="110sp"
                        android:id="@+id/imageButton8"
                        android:layout_gravity="center"
                        android:src="@drawable/btn_email"
                        android:onClick="AbrirReporteProducto" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Reportes"
                        android:id="@+id/textView7"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:focusableInTouchMode="false">

                    <ImageButton
                        android:layout_width="110sp"
                        android:layout_height="110sp"
                        android:id="@+id/imageButton4"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/btn_buscar"
                        android:scaleType="fitCenter"
                        android:onClick="AbrirdlgBuscar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Buscar"
                        android:id="@+id/textView4"
                        android:layout_gravity="center"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0">

                    <ImageButton
                        android:layout_width="110sp"
                        android:layout_height="110sp"
                        android:id="@+id/imageButton5"
                        android:layout_gravity="center"
                        android:src="@drawable/btn_config_p"
                        android:onClick="AbrirConfig" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Configurar"
                        android:id="@+id/textView3"
                        android:layout_gravity="center"
                        android:focusableInTouchMode="false" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:focusableInTouchMode="false" >

                    <ImageButton
                        android:layout_width="110sp"
                        android:layout_height="110sp"
                        android:id="@+id/imageButton"
                        android:layout_gravity="left|center_vertical"
                        android:src="@drawable/btn_circ_help"
                        android:scaleType="fitCenter"
                        android:onClick="AbrirdlgAyuda" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Ayuda"
                        android:id="@+id/textView8"
                        android:layout_gravity="center"
                        android:textIsSelectable="false" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:gravity="right">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView6"
            android:src="@drawable/ksslogo_banner1" />
    </LinearLayout>

</LinearLayout>
